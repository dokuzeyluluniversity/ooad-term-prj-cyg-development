<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="640.0" prefWidth="1080.0"
            style="-fx-background-color: #000;" stylesheets="@../../style/style.css"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.gui.controllers.SaleScreenController">
    <children>
        <TabPane prefHeight="700.0" prefWidth="676.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0"
                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab text="SALE ITEM">
                    <content>
                        <BorderPane prefHeight="611.0" prefWidth="1147.0">
                            <left>
                                <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <HBox spacing="20.0">
                                            <children>
                                                <TextField fx:id="txtAdd" prefHeight="30.0" prefWidth="220.0"
                                                           promptText="ID or Name"/>
                                                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#btnAdd"
                                                        text="ADD"/>
                                            </children>
                                        </HBox>
                                        <TextArea fx:id="txtTest" prefHeight="200.0" prefWidth="200.0"/>
                                    </children>
                                    <BorderPane.margin>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                                    </BorderPane.margin>
                                </VBox>
                            </left>
                            <right>
                                <VBox alignment="CENTER" spacing="25.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <ScrollPane fitToHeight="true" fitToWidth="true">
                                            <content>
                                                <TableView fx:id="tableBasket" prefHeight="650.0" prefWidth="720.0">
                                                    <columnResizePolicy>
                                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                                    </columnResizePolicy>
                                                </TableView>
                                            </content>
                                        </ScrollPane>
                                        <HBox alignment="CENTER" spacing="30.0">
                                            <children>
                                                <Button text="REMOVE"/>
                                                <Button text="CANCEL"/>
                                                <Label alignment="CENTER_RIGHT" text="TOTAL AMOUNT:"/>
                                            </children>
                                        </HBox>
                                        <Button mnemonicParsing="false" text="GENERATE RECEIPT"/>
                                    </children>
                                    <BorderPane.margin>
                                        <Insets bottom="20.0" right="20.0" top="20.0"/>
                                    </BorderPane.margin>
                                </VBox>
                            </right>
                        </BorderPane>
                    </content>
                </Tab>
                <Tab text="RETURN ITEM">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0"
                                    style="-fx-background-color: #595959;">
                            <children>
                                <TextField prefHeight="30.0" prefWidth="200.0" promptText="Receipt ID"
                                           AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="50.0"/>
                                <Button mnemonicParsing="false" text="SEARCH" AnchorPane.leftAnchor="240.0"
                                        AnchorPane.topAnchor="50.0"/>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>
